{
    "manifest_version": 2,
    "name": "HTTP Request Downloader",
    "version": "1.0",
    "description": "Intercept and download HTTP/HTTPS requests as a .txt file.",
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Download HTTP Requests"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "downloads",
      "<all_urls>"
    ]
  }
  